---
import '@/styles/global.css';
import background from '@/assets/background2.svg';
import Footer from '@/components/Footer.astro';

const { title = "Portfolio", description = "My professional portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>

  <body id="container">
    <!-- Fondo SVG global importado desde /assets/background2.svg -->
    <img
      id="background"
      src={background.src}
      alt="Background"
      fetchpriority="high"
    />

    <div>

      <main class="container mx-auto px-6 py-16">
        <slot />
      </main>
      <Footer />
    </div>

  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  #container {
    font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
  }
</style>
