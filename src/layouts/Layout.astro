---
import "@/styles/global.css";
import background from "@/assets/background2.svg";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

const { title = "Portfolio", description = "My professional portfolio" } =
  Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#223558" />

    <title>{title}</title>
  </head>

  <body id="container" class="scroll-smooth">
    <img
      id="background"
      src={background.src}
      alt="Background"
      fetchpriority="high"
    />
    <div id="main_content_wrapper" class="header_main_footer">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  html,
  body {
    height: 100%;
    min-height: 100vh;
    margin: 0;
    /* width: 100dvw; */
  }

  html {
    scroll-timeline-name: --page-scroll;
    scroll-timeline-axis: block;
  }

  #background {
    position: fixed;
    z-index: -1;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: blur(5px);
    animation: float 2s infinite linear alternate;
  }

  @keyframes float {
    0% {
      transform: translate(0, 0) scale(1.05);
    }
    100% {
      transform: translate(20px, 10px) scale(1.05);
    }
  }

  /* Aplica Flexbox al contenedor principal que envuelve Header, Main y Footer */
  .header_main_footer {
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
  }
  main {
    flex-grow: 1;
  }
</style>
